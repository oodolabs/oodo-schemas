{
  "id": "http://schema.oodo.co/protocol/printer",
  "$schema": "/protocol",
  "methods": {
    "print": {
      "description": "Print a document",
      "params": [
        {
          "name": "task",
          "value": {
            "$ref": "#/definitions/task"
          }
        }
      ],
      "returns": {
        "value": {
          "$ref": "#/definitions/job"
        },
        "description": "Returns the added job"
      }
    },
    "cancel": {
      "description": "Cancel a printing or pending job by job id",
      "params": [
        {
          "name": "jobId",
          "type": "number"
        }
      ]
    }
  },
  "events": {
    "state": {
      "value": {
        "$ref": "#/definitions/state"
      }
    },
    "data": {
      "value": {
        "$ref": "#/definitions/data"
      }
    }
  },
  "definitions": {
    "state": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "description": "The printer status"
        },
        "jobs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/job"
          }
        }
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "job": {
          "$ref": "#/definitions/job"
        }
      }
    },
    "job": {
      "type": "object",
      "description": "The print job",
      "properties": {
        "seq": {
          "type": [
            "number",
            "string"
          ]
        },
        "id": {
          "type": [
            "number",
            "string"
          ]
        },
        "status": {
          "type": "string"
        }
      }
    },
    "task": {
      "type": "object",
      "description": "The printing task",
      "properties": {
        "seq": {
          "type": [
            "number",
            "string"
          ],
          "description": "The sequence of print task"
        },
        "url": {
          "type": "string",
          "description": "The url of file to print"
        },
        "copies": {
          "type": "number",
          "description": "The number of copies"
        }
      }
    }
  }
}
