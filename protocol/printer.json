{
  "id": "http://schema.oodo.co/protocol/printer",
  "$schema": "/protocol",
  "methods": {
    "print": {
      "description": "Print a document",
      "params": [
        {
          "name": "task",
          "value": {
            "$ref": "#/definitions/task"
          }
        }
      ],
      "returns": {
        "value": {
          "$ref": "#/definitions/job"
        },
        "description": "Returns the added job"
      }
    },
    "cancel": {
      "description": "Cancel a printing or pending job by job id",
      "params": [
        {
          "name": "jobId",
          "type": "number"
        }
      ]
    },
    "tickle": {
      "description": "Force fetch current state",
      "value": {
        "$ref": "#/definitions/state"
      },
    }
  },
  "events": {
    "state": {
      "value": {
        "$ref": "#/definitions/state"
      }
    },
    "data": {
      "value": {
        "$ref": "#/definitions/data"
      }
    }
  },
  "definitions": {
    "state": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "isDefault": {
          "type": "boolean"
        },
        "status": {
          "type": "string",
          "description": "The printer status"
        },
        "options": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": [
                "number",
                "string",
                "array"
              ]
            }
          }
        },
        "jobs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/job"
          }
        },
        "extra": {
          "$ref": "#/definitions/extra"
        }
      }
    },
    "extra": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "number"
        },
        "status": {
          "type": "object",
          "properties": {
            "inklevel": {
              "type": "number"
            },
            "drumleft": {
              "type": "number"
            },
            "state": {
              "type": "object",
              "properties": {
                "reasons": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "display": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "job": {
          "$ref": "#/definitions/job"
        }
      }
    },
    "job": {
      "type": "object",
      "description": "The print job",
      "properties": {
        "seq": {
          "type": [
            "number",
            "string"
          ]
        },
        "id": {
          "type": [
            "number",
            "string"
          ]
        },
        "status": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "printerName": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "priority": {
          "type": "number"
        },
        "size": {
          "type": "number"
        },
        "creationTime": {
          "type": "string",
          "format": "date-time"
        },
        "processingTime": {
          "type": "string",
          "format": "date-time"
        },
        "completedTime": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "task": {
      "type": "object",
      "description": "The printing task",
      "properties": {
        "seq": {
          "type": [
            "number",
            "string"
          ],
          "description": "The sequence of print task"
        },
        "url": {
          "type": "string",
          "description": "The url of file to print"
        },
        "filename": {
          "type": "string",
          "description": "The custom file name"
        },
        "options": {
          "description": "The options of lp. ref: https://www.cups.org/doc/options.html",
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": [
                "number",
                "string"
              ]
            }
          }
        }
      }
    }
  }
}
