{
  "id": "http://schema.oodo.co/model/device",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Device",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "id": { "$ref": "#/definitions/id" },
        "naturalId": {
          "type": "string"
        },
        "naturalIdType": {
          "type": "string",
          "pattern": "^[a-z-]*$"
        },
        "name": {
          "type": "string"
        },
        "thing": { "$ref": "/common#/definitions/uuid" },
        "channels": {
          "type": "array",
          "items": { "$ref": "/model/channel#" }
        },
        "signatures": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+\\:[a-zA-Z_-]+$": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "id"
      ]
    },
    { "$ref": "/model/service-announcement#" }
  ],
  "definitions": {
    "id": { "$ref": "/common#/definitions/oodo-id" }
  }
}
